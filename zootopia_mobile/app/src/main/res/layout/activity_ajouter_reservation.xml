<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F7ED"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    tools:context=".reservation.AjouterReservation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="#D5E8D4">

        <ImageButton
            android:id="@+id/retour_liste_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:contentDescription="Close Button"
            android:src="@drawable/remove" />

        <ImageView
            android:id="@+id/imageZootopiaNav"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="134dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Zootopia Logo"
            android:src="@drawable/zootopia" />

    </RelativeLayout>

    <TextView
        android:id="@+id/titre2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter une réservation"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/detail_reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/detail"
        android:gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20px"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/label_prix"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Nom de la réservation"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/reservation_ajout_nom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="John Doe"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20px"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/label_no_tel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Numéro de téléphone"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/reservation_ajout_no_tel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="(000) 000-0000"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20px"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/label_nb_personnes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Nombre de personnes"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/reservation_ajout_nb_personnes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20px"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/label_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Date de la réservation"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/reservation_ajout_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="2001-09-11"
                    android:inputType="date"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20px"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/label_heure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Heure de la réservation"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/reservation_ajout_heure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:gravity="center" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/label_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="0"
            android:text="Note :"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/reservation_ajout_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="30px"
            android:layout_weight="0"
            android:background="@drawable/rounded_border"
            android:ems="10"
            android:inputType="text"
            android:minHeight="200px"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ajout_reservation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/green_button"
        android:text="Ajouter"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/annuler_ajout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button"
        android:text="Annuler"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#D5E8D4"
            app:menu="@menu/bottom_navigation"
            app:itemActiveIndicatorStyle="@android:color/transparent"
            app:labelVisibilityMode="unlabeled" />
    </RelativeLayout>

</LinearLayout>